<%= render partial: "top_wrapper", locals: {blogs_title: "確認"} %>
<%= form_with model: @blog, local: true do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <div class="form-group">
    <p>タイトル</p>
    <p class="form-control"><%= @blog.title %></p>
  </div>
  <div class="form-group">
    <p>内容</p>
    <p><%= simple_format(@blog.content) %></p>
  </div>
  <div class="confirm_btn_wrapper">
    <%= form.submit "投稿", class: "btn btn-success" %>
    <%= form.submit "戻る", name: "back", class: "btn btn-secondary" %>
  </div>
<% end %>